{
    "manifest_version": 3,
    "name": "Unos Tab Sorter",
    "version": "1.1",
    "description": "Sort and organize Chrome tabs by top-level domain.",
    "permissions": [
      "tabs",
      "windows",
      "downloads",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icon.png"
    }
  }